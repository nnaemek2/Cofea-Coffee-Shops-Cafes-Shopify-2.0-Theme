<div data-section-id="{{ section.id }}" data-section-type="section-testimonial-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{% endif %} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-testimonial-v2" style="background-color:{{ section.settings.bg_banner }}">
    <div class="container container-v2">
      <div class="row">
        <div class="col-12">  
          <div class="row js-testimonial-v2-slide">
            {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
            {% if block.type == "testimonial" %}
            <div class="testimonial-inner">
              <div class="row"style="align-items: center;">
                <div class="col-lg-6 col-md-6 col-12 col-sm-12"> 
                  <div class="testimonial-info">
                    <h3 class="title-heading" style="color: {{ section.settings.color_title }}">{{ section.settings.title_banner }}</h3>
                    <p class="text" style="color: {{ block.settings.color_content }}">{{ block.settings.block_content }}</p> 
                    <span class="engoc-star star-5"></span>
                  </div>
                  <div class="testimonial-author">
                    <div class="author-info">
                      <h3 class="mb-1" style="color: {{ block.settings.color_name }}">{{ block.settings.block_name }}</h3>
                      <p class="text-position" style="color: {{ block.settings.color_des }}">{{ block.settings.block_des }}</p>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12 col-sm-12">
                  <a href="{{ block.settings.url_banner }}" class="d-block box-img" style="float: right;">
                    <img loading="lazy" width="" height="" data-src="{% if block.settings.img_banner2 != blank %} {{ block.settings.img_banner2 | image_url }} {% else %} //via.placeholder.com/550x550 {% endif %}" class="lazyload " alt="_img_banner">
                  </a>
                </div>   
              </div>

            </div>
            {% endif %}
            {% endfor %}
            {% endif %}
          </div>
        </div>
      </div>


    </div>
  </div>
</div>

