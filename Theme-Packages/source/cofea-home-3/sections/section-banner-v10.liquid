<div data-section-id="{{ section.id }}" data-section-type="section-banner-v10" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v10 mt-all">
    <div class="container container-v2">
      <div class="row">   
        <div class="col-md-6">
          <div class="item-banner banner1">
            <div class="img-banner">
              <a href="{{section.settings.link_banner1}}" class="d-block">
                {% if section.settings.img_banner1 != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.img_banner1 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/705x749" class="lazyload img-fluid w-100" alt="_img_banner_">
                {% endif %}
              </a>
            </div>
            <div class="banner-wrapper-infor" style="background: {{section.settings.bg_section}}">
              <div class="info">
                <div class="subtitle">{{section.settings.subheading_banner1}}</div>
                <h4 class="title-banner">{{section.settings.title_banner1}}</h4>
                <a href="{{section.settings.link_banner1}}" class="button">{{section.settings.button_banner1}}</a>
                
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div class="col-sm-12">
              <div class="item-banner banner2">
                <div class="image">
                  <a href="{{section.settings.link_banner1}}" class="d-block">
                    {% if section.settings.img_banner2 != blank %}
                    <img loading="lazy" width="" height="" data-src="{{ section.settings.img_banner2 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                    {% else %}
                    <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/690x367" class="lazyload img-fluid w-100" alt="_img_banner_">
                    {% endif %}
                  </a>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="item-banner banner3">
                <div class="img-banner">
                  <a href="{{section.settings.link_banner1}}" class="d-block">
                    {% if section.settings.img_banner3 != blank %}
                    <img loading="lazy" width="" height="" data-src="{{ section.settings.img_banner3 | image_url }}" class="lazyload img-fluid w-100" alt="_img_banner_">
                    {% else %}
                    <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/690x367" class="lazyload img-fluid w-100" alt="_img_banner_">
                    {% endif %}
                  </a>
                </div>
                <div class="banner-infor">
                  <div class="info">
                    <h4 class="banner-title">{{section.settings.title_banner3}}</h4>
                    <a href="{{section.settings.link_banner3}}" class="button">{{section.settings.button_banner3}}</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

