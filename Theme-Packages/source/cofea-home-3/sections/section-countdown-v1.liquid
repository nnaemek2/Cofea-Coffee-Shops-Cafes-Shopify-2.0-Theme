<div data-section-id="{{ section.id }}" data-section-type="section-countdown-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{% endif %} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{ section.settings.sections_bg_color }};{% endif %}">
  <div class="section-countdown-v1 mt-all" style="background-image: url( {% if section.settings.img_banner1 != blank %}{{ section.settings.img_banner1 | image_url }} {% else %}///via.placeholder.com/1920x750 {% endif %})">
    <div class="container container-v2">
      <div class="row align-items-center justify-content-center">
        <div class="col-lg-6 countdown-left"> 
          <div class="elementor-widget-wrap">
            <div class="elementor-widget-container"> 
              <div class="elementor-image">       
                {% if section.settings.ing_left != blank %}
                <img loading="lazy" width="" height="" data-src="{{ section.settings.ing_left | image_url }}" class="lazyload img-fluid" alt="_img_banner_">
                {% else %}
                <img loading="lazy" width="" height="" data-src="https://via.placeholder.com/426x770" class="lazyload img-fluid" alt="_img_banner_">
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 countdown-right" style="background: {{section.settings.bg_section}}">
          <div class="box-info-content text-center">
            <div class=" content-section">
              <div class=" info-deal">
                <div class="m-auto">
                  {% if section.settings.title-deal != blank %}
                  <div class="title-deal" style="color : {{ section.settings.color_title }}">{{ section.settings.title-deal }}</div>
                  {% endif %}

                  {% if section.settings.deal-to != blank %}
                  <div class="deal-to" style="color : {{ section.settings.color_sub_title }}">{{ section.settings.deal-to }}</div>
                  {% endif %}
                </div>
              </div>

              <div class="countdown-timer text-center">
                <ul class="mb-0" data-countdown="countdown-v1" data-date="{{ section.settings.countdown-date }}">

                </ul>
              </div>

              {% if section.settings.buttom_banner != blank %}
              <div class="div-button">
                <a class="button " href="{{ section.settings.button_banner_url }}" style="color: {{ section.settings.color_buttom_banner }}; background:{{ section.settings.bgcolor_buttom_banner }};">
                  {{ section.settings.buttom_banner }}
                </a>
              </div>
              {% endif %}
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>


<style>
  .section-countdown-v1 .button:hover {
    color : {{ section.settings.hovercolor_buttom_banner }} !important;
    background : {{ section.settings.hoverbgcolor_buttom_banner }} !important;
  }
  .section-countdown-v1 .countdown-timer li span
  {
    color: {{ section.settings.color_countdown }} !important;

  }
  .section-countdown-v1 .countdown-timer li{
    color: {{ section.settings.color_subcountdown }} !important;
  }
</style>  


