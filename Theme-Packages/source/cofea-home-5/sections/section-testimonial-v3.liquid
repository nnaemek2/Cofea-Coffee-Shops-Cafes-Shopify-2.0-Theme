<!-- /sections/index-reviews.liquid -->
{%- assign slide_style = '3' -%}
{% case section.blocks.size %}
  {% when 1 %}
    {%- assign slide_style = '1' -%}
  {% when 2 %}
    {%- assign slide_style = '2' -%}
{% endcase %}

<div class="index-reviews testimonial-v3" data-section-id="{{ section.id }}" data-section-type="section-testimonial-v3" data-slide-style="{{ slide_style }}" data-slide-count="{{ section.blocks.size }}">

  <div class="container container-v1">
    {% if section.settings.title != blank %}
      <div class="text-center">
        <h3 class="title_heading">{{ section.settings.title | escape }}</h3>
      </div>
    {% endif %}
    
    <div class="reviews reviews--{{ section.blocks.size }} mt-50">
      <div class="slick_reviews grid {% unless section.blocks.size == 5 %}grid--uniform{% endunless %}" data-reviews-slideshow>
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            {% assign img_object = block.settings.image %}
          {% else %}
            {%- assign img_object = 'blank.svg' | asset_url -%}
          {% endif %}
          <div class="review__item slide--{{ block.id }} slide--left" {{ block.shopify_attributes }}>
            <div class="review__card">
              
              <div class="review__card__text">
                <div class="review__card__text__contents">
                  
                  {%- if block.settings.stars > 0 -%}
                    <ul class="review__stars unstyled">
                      {% for i in (1..block.settings.stars) %}
                        <li>{% include 'icon-star' %}</li>
                      {% endfor %}
                    </ul>
                  {%- endif -%}

                  {% if block.settings.text != blank %}
                    <div class="review__content rte">{{ block.settings.text }}</div>
                  {% endif %}
                </div>
              </div>
              <div class="review__image__align">
                <div class="review__image__wrapper">
                  <div class="avatar">
                    {% if block.settings.image != blank %}
                    <img loading="lazy" width="" height="" width="88" height="88" data-src="{{ block.settings.image | image_url }}" class="lazyload img-responsive" alt="testimonial">
                    {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="content">
                  {% if block.settings.title != blank %}
                    <h2 class="review__name h3">{{ block.settings.title | escape }}</h2>
                  {% endif %}

                  {% if block.settings.job != blank %}
                    <p class="review__title rte--index">{{ block.settings.job | escape }}</p>
                  {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% if section.blocks.size == 0 %}
     
    {% endif %}
  </div>
</div>


<style>
  .index-reviews.testimonial-v3{
    background-image : url({% if section.settings.img_image != blank  %}{{section.settings.img_image | image_url }} {% endif %});
    background-position : center; 
    background-size: cover
  }
</style>

<script>
  jQuery(document).ready(function($) {

    $('.slick_reviews').slick({
      dots: true,
      arrows:false,
      infinite: true,
      speed: 300,
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: true,
      {% if settings.enable_rtl_mode %}rtl: true,{% endif %}
      autoplaySpeed: 5000,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 2,
            infinite: true,
            dots: false,
            arrows:false
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
            dots: false,
            arrows:false
          }
        }
      ]
    });
  })
</script>
